@model Utilisateur

@{
    string message1 = TempData["userExist"] as string;
    string message2 = TempData["mailExist"] as string;
    string message3 = TempData["wrong_confirm"] as string;
}
<section style="background-color: #eee;">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form class="mx-1 mx-md-4" method="post">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <span style="display:block;" asp-validation-for="Prenom" class="text-danger"></span>
                                            <label class="form-label" asp-for="Prenom">Votre Prénom</label>
                                            <input asp-for="Prenom" class="form-control" />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <span style="display:block;" asp-validation-for="Nom" class="text-danger"></span>
                                            <label asp-for="Nom" class="form-label">Votre Nom</label>
                                            <input asp-for="Nom" class="form-control" />
                                        </div>
                                    </div>



                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @if (TempData.ContainsKey("userExist"))
                                            {
                                                <span style="display:block;" class="text-danger">@message1</span>
                                            }
                                            <span style="display:block;" asp-validation-for="Username" class="text-danger"></span>
                                            <label class="form-label" asp-for="Username">Nom d'utilisateur</label>
                                            <input asp-for="Username" class="form-control" />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @if (TempData.ContainsKey("mailExist"))
                                            {
                                                <span style="display:block;" class="text-danger">@message2</span>
                                            }
                                            <span style="display:block;" asp-validation-for="Mail" class="text-danger"></span>
                                            <label class="form-label" asp-for="Mail">Email</label>
                                            <input asp-for="Mail" class="form-control" />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <span style="display:block;" asp-validation-for="Password" class="text-danger"></span>
                                            @if (TempData.ContainsKey("wrong_confirm"))
                                            {
                                                <span style="display:block;" class="text-danger">@message3</span>
                                            }
                                            <label class="form-label" asp-for="Password">Password</label>
                                            <input asp-for="Password" class="form-control" type="password" />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @if (TempData.ContainsKey("wrong_confirm"))
                                            {
                                                <span style="display:block;" class="text-danger">@message3</span>
                                            }
                                            <label for="confirmpass" class="form-label">Repeat your password</label>
                                            <input for="confirmpass" id="confirmpass" name="confirmpass" class="form-control" type="password" />
                                        </div>
                                    </div>
                                    <input asp-for="Salt" type="hidden" value="a" />
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg mb-5">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Voiture">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>