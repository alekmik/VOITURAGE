<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Voiturage.styles.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/volant-people-removebg-preview.png">

</head>
<body>
    <header>
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <i class='fas fa-car' style='font-size:30px;color:deepskyblue; margin-right:5px'></i>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Voiturage</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetInt32("isadmin") == 0)
                        {
                            <li class="nav-item align-self-center">
                                <a class="nav-link" asp-area="" asp-controller="PublierTrajet" asp-action="Index" style="color:deepskyblue"><i class="bi bi-plus-circle"></i> Publier un trajet</a>
                            </li>
                        }
                        @if(Context.Session.GetInt32("isadmin") == 1)
                        {
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Liste utilisateurs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Trips" asp-action="Index">Liste trajets</a>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
            <div class="dropdown">
                <partial name="_dropdownPartial"></partial>
            </div>
        </nav>

    </header>
    @if (TempData.ContainsKey("Error"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }
    @if (TempData.ContainsKey("Success"))
    {
        <div class="alert alert-success" role="alert">
            @TempData["Success"]
        </div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white" style="position: relative; left: 15%;">
            <div class="navbar-collapse collapse justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item" style="padding-left:30px;padding-right:30px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home"> &copy; 2022 - Voiturage - </a>
                    </li>
                    <li class="nav-item" style="padding-left:30px;padding-right:30px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home">Information Légal</a>
                    </li>
                    <li class="nav-item" style="padding-left:30px;padding-right:30px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home">Nous Recrutons</a>
                    </li>
                    <li class="nav-item" style="padding-left:30px;padding-right:30px;">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                    <li>
                    <li class="nav-item" style="padding-left:30px;padding-right:30px;">
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li class="nav-item" style="padding-left:30px;padding-right:30px;">
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </li>
                    <li class="nav-item" style="padding-left:30px;padding-right:30px;">
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </li>
                </ul>
            </div>
        </nav>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

